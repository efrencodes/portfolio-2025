---
import { SEO } from "astro-seo";
import "@styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <SEO
      charset="UTF-8"
      title="EFREN MARTINEZ - SENIOR FRONTEND ENGINEER"
      description="Senior Frontend Engineer especializado en #javascript #vue #react #typescript #withastro #nextjs #cypress"
      canonical={new URL("https://www.efrencodes.com")}
      twitter={{
        creator: "@efrencodes",
        card: "summary_large_image",
        site: "https://www.efrencodes.com",
        title: "EFREN MARTINEZ - SENIOR FRONTEND ENGINNER",
        description:
          "Senior Frontend Engineer especializado en #javascript #vue #react #typescript #withastro #nextjs #cypress",
        image: "https://www.efrencodes.com/images/profile-efren-martinez.webp",
        imageAlt: "Profile - efrencodes",
      }}
      openGraph={{
        basic: {
          title: "EFREN MARTINEZ - SENIOR FRONTEND ENGINNER",
          image: "https://www.efrencodes.com/images/profile-efren-martinez.webp",
          url: new URL("https://www.efrencodes.com"),
          type: "summary_large_image",
        },
        optional: {
          description:
            "Senior Frontend Engineer especializado en #javascript #vue #react #typescript #withastro #nextjs #cypress",
          siteName: "EFREN MARTINEZ - SENIOR FRONTEND ENGINNER",
          locale: "es-MX",
        },
      }}
    />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="google" content="notranslate" />
    <meta name="msapplication-TileColor" content="#d4d4d8" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@400;700&display=swap" rel="stylesheet" />
    <link
      type="text/plain"
      rel="author"
      href="https://www.efrencodes.com/humans.txt"
    />
    <meta
      name="apple-mobile-web-app-title"
      content={new URL("https://www.efrencodes.com")}
    />
    <meta
      name="application-name"
      content={new URL("https://www.efrencodes.com")}
    />
    <meta name="theme-color" content="#d4d4d8" />
    <meta
      name="keywords"
      content=""
    />
    <meta name="author" content="Efrén Martínez" />
    {/* Bing Webmaster Tools */}
    <meta name="msvalidate.01" content="CFB0EE4F9641D78D3282FD8FAA6D0565" />
    {/* ahrefs */}
    <meta
      name="ahrefs-site-verification"
      content="9ad8ba080db7b2dfb9e2af32909749dbec24348bbee6f5aefc5de4e9d28c6b87"
    />
  </head>
  <body
    class="min-h-screen bg-slate-800 text-zinc-100 px-6 py-32 font-mono flex items-center justify-center"
  >
    <main class="max-w-[38rem] w-full">
      <slot />
    </main>
  </body>
</html>
