---
import { Image } from 'astro:assets'
interface Props {
	year: number
	title: string
	description: string
	stack?: string[]
	images?: string[]
	href: string
}
const { year, title, description, stack, images, href } = Astro.props
---

<div class="flex gap-6 mb-2 p-4 rounded-lg">
	<div class="text-gray-500 w-12">{year}</div>
	<div class="flex-1">
		<h3 class="text-lg font-medium mb-2">
			<a href={href} class="hover:text-gray-100 transition">
				{title}
			</a>
		</h3>
		<p class="text-gray-400 mb-4">{description}</p>

		{
			stack && (
				<div class="mb-4">
					<p class="mb-2">Stack tecnologico:</p>
					<ul class="list-disc pl-5 text-gray-400 space-y-1">
						{stack.map((item: string) => (
							<li>{item}</li>
						))}
					</ul>
				</div>
			)
		}

		{
			images && images.length > 0 && (
				<div class="flex gap-2 overflow-x-auto py-2">
					{images.map((image: string) => (
						<div class="flex-shrink-0">
							<Image
								src={image || ''}
								alt={`Project screenshot`}
								width={80}
								height={150}
								class="rounded-md border border-gray-700"
							/>
						</div>
					))}
				</div>
			)
		}
	</div>
</div>
