---
import BaseLayout from '@layouts/BaseLayout.astro'
import ProjectCard from '@components/ProjectCard.astro'
import WritingCard from '@components/WritingCard.astro'
import HeaderTitle from '@components/HeaderTitle.astro'
import AboutMe from '@components/AboutMe.astro'
import LayoutNoteProject from '@components/LayoutNoteProject.astro'
import Main from '@components/Main.astro'

import { ListsProject } from '@config/projects'
import type { ListsProjectProps } from '@config/projects'
import { ListsNote } from '@config/notes'
import type { ListsNoteProps } from '@config/notes'
---

<BaseLayout>
	<Main>
		<HeaderTitle />

		<AboutMe />

		<LayoutNoteProject title="Mis notas">
			{
				ListsNote.map((items: ListsNoteProps) => (
					<WritingCard {...items} />
				))
			}
		</LayoutNoteProject>

		<LayoutNoteProject title="Proyectos">
			{
				ListsProject.map(
					(items: ListsProjectProps) =>
						!items.active && <ProjectCard {...items} />
				)
			}
		</LayoutNoteProject>
	</Main>
</BaseLayout>
