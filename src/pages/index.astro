---
import TodaySection from "@components/TodaySection.astro";
import ContactSection from "@components/ContactSection.astro";
import ContainerSection from "@components/ContainerSection.astro";
import ListItem from "@components/ListItem.astro";
import UserProfile from "@components/UserProfile.astro";
import Layout from "@layouts/Layout.astro";

import { ListProject } from "@config/projects";
import type { ListProjectProps } from "@config/projects";
---

<Layout>
  <UserProfile />

  <TodaySection />

  <ContainerSection title="proyectos">
    {
      ListProject.map((listProjectsItems: ListProjectProps, _) => {
        return <ListItem {...listProjectsItems} />;
      })
    }
  </ContainerSection>

  <ContactSection />
</Layout>
