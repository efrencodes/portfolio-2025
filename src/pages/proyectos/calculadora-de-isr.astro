---
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <div
    class="max-w-[38rem] w-full text-sm [&_a]:text-xs [&_a]:text-[#909090]"
  >
    <nav class="mb-10">
      <a href="/" class="text-[#909090]">← regresar a /</a>
    </nav>

    <div class="max-w-3xl mx-auto">
      <h1 class="text-2xl font-normal mb-4">
        Calculadora de ISR | OCC Mundial<span class="caret">_</span>
      </h1>

      <div class="mb-10">
        <Image
          src="/proyectos/calculadora-de-isr/home-desktop.png"
          alt="Calculadora de ISR para empleados de OCC Mundial"
          width={800}
          height={400}
          class="rounded-md"
        />
      </div>

      <div class="space-y-10 text-sm [&>p]:text-[#909090] [&>p]:text-xs">
        <h2 class="font-normal text-white">acerca del proyecto</h2>
        <p>
          the vercel.com redesign
        </p>

        <h2 class="font-normal text-white">principales caracteristicas</h2>
        <ul class="list-disc pl-5 space-y-2 text-[#909090]">
          <li>responsive design optimized for all device sizes</li>
        </ul>

        <h2 class="font-normal text-white">Tecnologías</h2>
        <ul class="list-disc pl-5 space-y-2 text-[#909090]">
          <li>next.js v14</li>
          <li>react</li>
          <li>typescript</li>
          <li>tailwind css</li>
          <li>graphql</li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
