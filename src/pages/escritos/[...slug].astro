---
import { type CollectionEntry, getCollection } from 'astro:content'
import BlogLayout from '@layouts/BlogLayout.astro'
import HeaderTitle from '@components/HeaderTitle.astro'

export async function getStaticPaths() {
	const posts = await getCollection('escritos')
	return posts.map((post: any) => ({
		params: { slug: post.slug },
		props: post,
	}))
}
type Props = CollectionEntry<'escritos'>

const post = Astro.props
// @ts-ignore
const { Content } = await post.render()
---

<BlogLayout {...post.data}>
	<div class="min-h-screen bg-[#222] text-gray-200">
		<main class="max-w-2xl mx-auto p-6 md:p-8">
			<HeaderTitle />
			<section>
				<h1 class="text-2xl font-medium mb-1">
					{post?.data?.title}
				</h1>
			</section>
			<Content />
		</main>
	</div>
</BlogLayout>
